<div class="content">
  <h2><span class="yellow first-line">Welcome, {{user.username}}!</span></h2>

  <form class="profile-form" action="/profile" method="post">
    <div class="container">
      <div class="labelclass">
        <label for="gender" name="gender">Gender: </label>
      </div>
      <div class="inputclass">
        <select name="gender" id="gender" value={{user.gender}}>
          <option name="empty" value=""></option>
          <option name="woman" value="">Woman</option>
          <option name="man" value="">Man</option>
          <option name="non-binary" value="">Non-binary</option>
        </select>
      </div>
    </div>
    <div class="container">
      <div class="labelclass">
        <label for="name">Name: </label>
      </div>
      <div class="inputclass">
        <input type="text" name="name" id="name" value="{{user.name}}">
      </div>
    </div>
    <div class="container">
      <div class="labelclass">
        <label for="surname">Surname: </label>
      </div>
      <div class="inputclass">
        <input type="text" name="surname" id="surname" value={{user.surname}}>
      </div>
    </div>

    <div class="container">
      <div class="labelclass">
        <label for="email">Email: </label>
      </div>
      <div class="inputclass">
        <input type="email" name="email" id="email" value={{user.email}}>
      </div>
    </div>

    <button type="submit">Save</button>
</div>

</form>
</div>