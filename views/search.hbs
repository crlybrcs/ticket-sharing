<div class="content">
  <h2><span class="yellow">When do you need a ticket?</span></h2>

  <div class="form-wrapper">
    <form class="search-form" action="/availableTickets" method="post">
      <div class="form-container">
        <label for="from">From: </label>
        <input type="date" name="from" id="from" placeholder="FROM">
      </div>
      <div class=" form-container">
        <label for="until">Until: </label>
        <input type="date" name="until" id="until" placeholder="UNTIL">
      </div>
      <div class="radio-tile-group">
        <div class="input-container">
          <input class="radio-button" type="radio" name="zone" value="AB" id="AB" />
          <div class="radio-tile">
            <label for="AB" class="radio-tile-label">AB</label>
          </div>
        </div>
        <div class="input-container">
          <input class="radio-button" type="radio" name="zone" value="ABC" id="ABC" />
          <div class="radio-tile">
            <label for="ABC" class="radio-tile-label">ABC</label>
          </div>
        </div>
      </div>
  </div>
  {{#if message }}
  <div class="error-message"><span class="red">{{ message }}</span></div>
  {{/if}}
  <button class="myButton" id="form-button" type="submit">GET your TICKET!</button>
  </form>
</div>